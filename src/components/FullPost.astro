---
import { Image } from "astro:assets"
import type { CollectionEntry } from "astro:content"

import Tags from "./Tags.astro"

import { IMAGE_SIZES } from "../consts.js"


export interface Props {
	post: CollectionEntry<"blog">;
}

const { post } = Astro.props
const sharedThumbClasses = `
	block
	flex-initial
	w-auto
	object-cover
	max-h-[400px]
	bg-slate-900
	shadow-md
	shadow-black/50
	rounded-md
	scale-105
	hover:shadow-black
	motion-safe:transition-all
	overflow-hidden
`;
---

<article
	class={`gradient-wrapper
	gap-y-6
	my-6
	rounded-md
	shadow-sm
	shadow-black
	flex
	flex-col
	max-w-3xl
	bg-slate-900
	pb-6
`}
>
	{
		post.data.svgCover && (
			<object
				class={sharedThumbClasses}
				data={post.data.svgCover}
				width="300"
				height="300"
			/>
		)
	}
	{
		post.data.cover && (
			<Image
				class={sharedThumbClasses}
				width={800}
				src={post.data.cover}
				alt={post.data.coverAlt ?? ""}
				format={"png"}
			/>
		)
	}
	<div
		class={`title-date
		px-6
		flex-1
		flex
		flex-col
	`}
	>
		<h1
			class={` font-title
			text-5xl
			py-6
			w-full
			origin-left
			motion-safe:group-hover:scale-110
			motion-safe:transition-all
			font-extrabold
			text-slate-200
			text-shadow-[-2px_3px_0_var(--tw-shadow-color)]
			shadow-fuchsia-800/50
		`}
		>
			<a class="block w-full" href={`/post/${post.slug}`}
				>{post.data.title}</a
			>
		</h1>
		<time class="text-slate-400" datetime={post.data.pubDate.toISOString()}>
			<a
				class="block w-full hover:text-blue-400"
				href={`/post/${post.slug}`}
			>
				{
					post.data.pubDate.toLocaleDateString("en-us", {
						year: "numeric",
						month: "short",
						day: "numeric",
					})
				}
			</a>
		</time>
		<div class="flex justify-between w-full py-3">
			{post.data.tags && <Tags tags={post.data.tags} />}
			{
				post.data.langs && (
					<Tags
						urlpath="/langs"
						classes="bg-green-700"
						tags={post.data.langs}
					/>
				)
			}
		</div>
	</div>
	<section class="content px-6 text-slate-200">
		<slot />
	</section>
</article>
